<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <h2 class="tbspace">Sign Up</h2>

      <%= form_for @list do |f| %>
      <% if @list.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% else %>

      <div class="form-group">
        <!-- <label class="sr-only" for="exampleInputAmount">Email Address</label> -->
        <div class="input-group">
          <div class="input-group-addon">@</div>
          <%= text_field_tag :name, params[:name], id: 'input-name', class: 'form-control form-control-lg', placeholder: 'Name' %>
          <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Email"> -->
        </div>
      </div>

      <div class="actions"><%= submit_tag "Create", class: 'btn btn-info' %></div>
      <!-- <button type="submit" class="btn btn-primary">Log In</button> -->

      <% end %>
      <% end %>
    </div>
  </div>
</div>
