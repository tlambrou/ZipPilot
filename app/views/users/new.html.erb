<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <h2 class="tbspace">Sign Up</h2>

      <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% else %>

      <div class="form-group">
        <!-- <label class="sr-only" for="exampleInputAmount">Email Address</label> -->
        <div class="input-group">
          <div class="input-group-addon">✉️</div>
          <%= text_field_tag :email, params[:email], id: 'input-email', class: 'form-control form-control-lg', placeholder: 'Email' %>
          <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Email"> -->
        </div>
      </div>
      <div class="form-group">
        <!-- <label class="sr-only" for="exampleInputAmount">Email Address</label> -->
        <div class="input-group">
          <div class="input-group-addon">🔒</div>
          <%= password_field_tag :password, params[:password], id: 'input-password', class: 'form-control form-control-lg', placeholder: 'Password' %>
          <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Email"> -->
        </div>
      </div>
      <div class="form-group">
        <!-- <label class="sr-only" for="exampleInputAmount">Email Address</label> -->
        <div class="input-group">
          <div class="input-group-addon">🔒</div>
          <%= password_field_tag :password_confirmation, params[:password_confirmation], id: 'input-password-confirmation', class: 'form-control form-control-lg', placeholder: 'Password Confirmation' %>
          <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Email"> -->
        </div>
      </div>
      <div class="actions"><%= submit_tag "Sign Up", class: 'btn btn-info' %></div>
      <!-- <button type="submit" class="btn btn-primary">Log In</button> -->

      <% end %>
      <% end %>
    </div>
  </div>
</div>
